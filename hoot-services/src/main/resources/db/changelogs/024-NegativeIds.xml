    <sql>ALTER TABLE current_nodes ALTER COLUMN id DROP DEFAULT;</sql>
    <sql>ALTER TABLE current_ways ALTER COLUMN id DROP DEFAULT;</sql>
    <sql>ALTER TABLE current_relations ALTER COLUMN id DROP DEFAULT;</sql>
    -->

	</changeSet>
</databaseChangeLog>
